<table>
  <h1>Product <%= @product.id %></h1>

  <tr>
    <th style="text-align: right">Name</th>
    <td style="text-align: left; padding-left: 20px"><%= @product.name %></td>
  </tr>
  <tr>
    <th style="text-align: right">Price</th>
    <td style="text-align: left; padding-left: 20px"><%= number_to_currency @product.price %></td>
  </tr>
  <tr>
    <th style="text-align: right">Image</th>
    <td style="text-align: left; padding-left: 20px"><%= image_tag @product.image_url, alt: @product.image_url %></td>
  </tr>
  <tr>
    <th style="text-align: right">Created</th>
    <td style="text-align: left; padding-left: 20px">
      <%= time_ago_in_words @product.created_at %> ago,
      <%= @product.created_at.strftime('%A, %B %e %Y, %l:%M %p %Z') %>
    </td>
  </tr>

</table>

<%= link_to "Edit", edit_admin_product_path(@product) %>
|
<%= link_to "Delete", admin_product_path(@product), data: { confirm: "Are you sure you want to delete this product?" }, method: 'delete' %>
|
<%= link_to "Back to products", admin_products_path %>
