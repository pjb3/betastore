<div class="row">
  <%= form_tag({}, method: 'get', role: 'form', class: 'form-inline') do %>
    <div class="form-group col-sm-3">
      <%= text_field_tag :search, params[:search], class: 'form-control col-sm-2' %>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  <% end %>
  <% unless params[:search].blank? %>
    <%= link_to "Back", products_path, class: 'btn btn-primary' %>
  <% end %>
</div>

<% for product in @products %>
  <div class="col-sm-4">
    <%= link_to product do %>
      <%= image_tag product.image_url, width: 200 %>
      <br/>
      <%= product.name %>
    <% end %>
  </div>
<% end %>

