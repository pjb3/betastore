<h1><%= @product.name %></h1>

<p>
  <%= image_tag @product.image_url %>
  <br/>
  <%= number_to_currency @product.price %>
</p>

<p>
  <%= button_to add_product_to_cart_path(@product), class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-shopping-cart"></span>
    Add To Cart
  <% end %>
</p>
